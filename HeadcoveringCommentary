    // Attach click events to each underlined (clickable) word.
    const clickableElements = document.getElementsByClassName("clickable");
    for (let elem of clickableElements) {
      elem.addEventListener("click", function() {
        const commentId = this.getAttribute("data-comment-id");
        const commentText = commentaryData[commentId] || "No commentary available for this term.";
        document.getElementById("commentary-content").innerHTML = `<p>${commentText}</p>`;
        switchSidebarTab('commentary');
      });
    }

    // Function to switch between sidebar tabs (Commentary and Reference List)
    function switchSidebarTab(tab) {
      const tabs = ["commentary", "references"];
      tabs.forEach(id => {
        document.getElementById("tab-" + id).classList.remove("active");
        document.getElementById("panel-" + id).classList.remove("active");
      });
      document.getElementById("tab-" + tab).classList.add("active");
      document.getElementById("panel-" + tab).classList.add("active");
    }

    // Function to toggle the sidebar using the icon button.
    function toggleSidebar() {
      const sidebar = document.getElementById("sidebar");
      const mainContent = document.getElementById("mainContent");
      const toggleBtn = document.getElementById("toggleSidebarBtn");
      if (sidebar.style.display === "none") {
        sidebar.style.display = "block";
        mainContent.style.width = "60%";
        toggleBtn.innerHTML = "&#10006;"; // X icon
      } else {
        sidebar.style.display = "none";
        mainContent.style.width = "100%";
        toggleBtn.innerHTML = "&#9776;"; // Hamburger icon
      }
    }
  </script>
